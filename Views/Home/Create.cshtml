
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model EpamAspMvc.Models.CreateViewModel

@using (Html.BeginForm("Create", "Home", FormMethod.Post, new { enctype = "multipart/form-data" })) {
    @Html.AntiForgeryToken()
<div class="well">
    <div class="form-horizontal">

        <div class="form-group">
            @Html.LabelFor(m => Model.PictureInner.PictureDescription, new { @class = "control-label col-sm-3" })
            <div class="col-sm-5">
                @Html.TextBoxFor(m => m.PictureInner.PictureDescription, new { @class = "form-control required" })
                @Html.ValidationMessageFor(model => model.PictureInner.PictureDescription)
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Choose Image(s)", new { @class = "control-label col-sm-3" })
            <div class="col-sm-5">
                <input type="file" name="files"
                       multiple="multiple" accept=".jpg, .png, .gif" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-5 col-sm-offset-3">
                <input type="submit" value="Save" class="btn btn-primary" />
                <div style="color:red">
                    @ViewBag.error
                </div>
            </div>
        </div>
    </div>
</div>
        }
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

